{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/dist",
  "env": {
    "VERCEL": "1",
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "api/**"
    }
  }
}
