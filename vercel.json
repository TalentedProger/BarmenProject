{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/dist",
  "env": {
    "VERCEL": "1"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}
